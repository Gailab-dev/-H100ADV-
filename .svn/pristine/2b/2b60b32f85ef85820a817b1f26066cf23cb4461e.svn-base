package com.minwon.controller;

import javax.servlet.http.HttpSession;

import org.slf4j.Logger;
import org.slf4j.LoggerFactory;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Controller;
import org.springframework.web.bind.annotation.ModelAttribute;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.servlet.ModelAndView;

import com.minwon.service.CryptoAriaService;
import com.minwon.service.LoginService;
import com.minwon.vo.LoginVO;

@Controller
@RequestMapping("/admin/*")
public class LoginController {
	private static final Logger logger = LoggerFactory.getLogger(LoginController.class);
	
	@Autowired
	LoginService loginService;
	
	@Autowired
	CryptoAriaService cryptoAriaService;
	
	@RequestMapping("login.do")
	public String login() {
		return "admin/login";
	}
	
	@RequestMapping("loginCheck.do")
	public ModelAndView loginCheck(@ModelAttribute LoginVO vo, HttpSession session) {
		vo.setAdminPw(cryptoAriaService.encryptData(vo.getAdminPw()));
		boolean result = loginService.loginCheck(vo, session);
		ModelAndView mav = new ModelAndView();
		if (result == true) {
			mav.setViewName("admin/adm_member_request");
			mav.addObject("msg", "success");
		} else {
			mav.setViewName("admin/login");
			mav.addObject("msg", "failure");
		}
		return mav;
	}
	
	@RequestMapping("logout.do")
	public ModelAndView logout(HttpSession session) {
		loginService.logout(session);
		ModelAndView mav = new ModelAndView();
		mav.setViewName("admin/login");
		mav.addObject("msg", "logout");
		return mav;
	}
}
