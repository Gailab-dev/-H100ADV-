package com.minwon.dao.impl;

import java.util.List;

import org.apache.ibatis.session.SqlSession;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Repository;

import com.minwon.dao.PositionDAO;
import com.minwon.vo.PositionVO;

@Repository
public class PositionDAOImpl implements PositionDAO {
	@Autowired
	SqlSession sqlSession;
	

	@Override
	public List<PositionVO> selectPositionList() throws Exception {
		return sqlSession.selectList("position.viewPositionList");
	}
	@Override
	public void insertPosition(PositionVO vo) throws Exception {
		sqlSession.insert("position.insertPosition", vo);
	}
	@Override
	public void updatePosition(PositionVO vo) throws Exception {
		sqlSession.update("position.updatePosition", vo);
	}
	@Override
	public void deletePosition(int dp_id) throws Exception {
		sqlSession.delete("position.deletePosition", dp_id);
	}
	@Override
	public PositionVO selectPosition(int dp_id) throws Exception {
		return sqlSession.selectOne("position.selectPosition", dp_id);
	}
	@Override
	public int getPositionUsersCount(int ps_id) throws Exception {
		return sqlSession.selectOne("position.getPositionUsersCount", ps_id);
	}
	@Override
	public List<String> getAllPositions() throws Exception {
		return sqlSession.selectList("position.allPositions");
	}
	@Override
	public String getPositionName(String ps_name) throws Exception {
		return sqlSession.selectOne("position.getPositionName", ps_name);
	}
}
