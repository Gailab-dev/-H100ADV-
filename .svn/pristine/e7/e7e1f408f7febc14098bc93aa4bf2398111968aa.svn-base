package com.minwon.service.impl;

import javax.servlet.http.HttpSession;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;

import com.minwon.dao.LoginDAO;
import com.minwon.service.LoginService;
import com.minwon.vo.LoginVO;

@Service
public class LoginServiceImpl implements LoginService {
	@Autowired
	LoginDAO loginDAO;

	@Override
	public boolean loginCheck(LoginVO vo, HttpSession session) {
		boolean result = loginDAO.loginCheck(vo);
		if (result) {
			LoginVO vo2 = viewMember(vo);
			session.setAttribute("adminId", vo2.getAdminId());
			session.setAttribute("adminEmail", vo2.getAdminEmail());
		}
		return result;
	}

	@Override
	public LoginVO viewMember(LoginVO vo) {
		return loginDAO.viewMember(vo);
	}

	@Override
	public void logout(HttpSession session) {
		session.invalidate();
	}
	
	
}
