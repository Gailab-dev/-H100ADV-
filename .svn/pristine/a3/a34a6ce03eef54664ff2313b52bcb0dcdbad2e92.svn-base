package com.minwon.dao.impl;

import java.util.List;

import org.apache.ibatis.session.SqlSession;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Repository;

import com.minwon.dao.MemberDAO;
import com.minwon.vo.MemberVO;

@Repository
public class MemberDAOImpl implements MemberDAO {
	@Autowired
	SqlSession sqlSession;

	@Override
	public List<MemberVO> selectMemberList() throws Exception {
		return sqlSession.selectList("member.selectMemberList");
	}

	@Override
	public MemberVO selectMember(int u_id) throws Exception {
		return sqlSession.selectOne("member.selectMember", u_id);
	}

	@Override
	public void insertMember(MemberVO vo) throws Exception {
		sqlSession.insert("member.insertMember", vo);
	}

	@Override
	public void deleteTempMember(int id) throws Exception {
		sqlSession.delete("member.deleteTempMember", id);
	}

	@Override
	public void requestMember(MemberVO vo) throws Exception {
		sqlSession.insert("member.requestMember", vo);
	}

	@Override
	public int getDpId(String department) throws Exception {
		return sqlSession.selectOne("member.getDpId", department);
	}

	@Override
	public int getPsId(String position) throws Exception {
		return sqlSession.selectOne("member.getPsId", position);
	}

}
