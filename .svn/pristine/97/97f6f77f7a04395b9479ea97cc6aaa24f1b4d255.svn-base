<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="position">
	<select id="viewPositionList"
		resultType="com.minwon.vo.PositionVO">
		SELECT ps_id, ps_name, ps_rank
		FROM `position`
	</select>

	<insert id="insertPosition"
		parameterType="com.minwon.vo.PositionVO">
		INSERT INTO `position`
		( ps_name, ps_rank)
		VALUES ( #{ps_name}, #{ps_rank})
	</insert>
	<update id="updatePosition"
		parameterType="com.minwon.vo.PositionVO">
		UPDATE `position`
		SET
		ps_name= #{ps_name},
		ps_rank= #{ps_rank}
		WHERE ps_id= #{ps_id}
	</update>
	<delete id="deletePosition" parameterType="int">
		DELETE FROM
		`position` WHERE ps_id=#{ps_id}
	</delete>

	<select id="selectPosition" parameterType="int"
		resultType="com.minwon.vo.PositionVO">
		SELECT ps_id, ps_name, ps_rank
		FROM `position` where ps_id = #{ps_id}
	</select>
	
	<select id="getPositionUsersCount" resultType="Integer">
		SELECT count(*) 
		FROM user 
		WHERE ps_id=#{ps_id}
	</select>
	
	<select id="allPositions" resultType="String">
		SELECT ps_name
		FROM position
	</select>
	
	<select id="getPositionName" resultType="String">
		SELECT ps_name
		FROM position
		WHERE ps_name = #{ps_name}
	</select>
</mapper>