package com.minwon.dao.impl;

import java.util.List;
import java.util.Map;

import org.apache.ibatis.session.SqlSession;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Repository;

import com.minwon.dao.UserDAO;
import com.minwon.vo.UserVO;

@Repository
public class UserDAOImpl implements UserDAO {
	@Autowired
	SqlSession sqlSession;
	

	@Override
	public List<UserVO> selectUserList() throws Exception {
		return sqlSession.selectList("user.viewUserList");
	}
	@Override
	public List<UserVO> selectPartUserList(int dp_id) throws Exception {
		return sqlSession.selectList("user.viewPartUserList", dp_id);
	}
	@Override
	public void insertUser(UserVO vo) throws Exception {
		sqlSession.insert("user.insertUser", vo);
	}
	@Override
	public void updateUser(UserVO vo) throws Exception {
		sqlSession.update("user.updateUser", vo);
	}
	@Override
	public void deleteUser(int u_id) throws Exception {
		sqlSession.delete("user.deleteUser", u_id);
	}
	@Override
	public UserVO selectUser(int u_id) throws Exception {
		return sqlSession.selectOne("user.selectUser", u_id);
	}
	
	@Override
	public Integer countUserPart(int dp_id) throws Exception {
		return sqlSession.selectOne("user.countUserPart", dp_id);
	}
	@Override
	public Integer countUserPosition(int ps_id) throws Exception {
		return sqlSession.selectOne("user.countUserPosition", ps_id);
	}
	@Override
	public void deleteComplaintSettles(int u_id) throws Exception {
		sqlSession.delete("user.deleteComplaintSettles", u_id);
	}
	@Override
	public void deleteComplaintImages(int u_id) throws Exception {
		sqlSession.delete("user.deleteComplaintImages", u_id);
	}
	@Override
	public void deleteComplaintReplies(int u_id) throws Exception {
		sqlSession.delete("user.deleteComplaintReplies", u_id);
	}
	@Override
	public void deleteComplaintFiles(int u_id) throws Exception {
		sqlSession.delete("user.deleteComplaintFiles", u_id);
	}
	@Override
	public void deleteComplaints(int u_id) throws Exception {
		sqlSession.delete("user.deleteComplaints", u_id);
	}
	@Override
	public UserVO selectUserFind(String u_login_id) throws Exception {
		return sqlSession.selectOne("user.selectUserFind", u_login_id);
	}
	@Override
	public List<Map<String, Object>> getDeptUserList() throws Exception {
		return sqlSession.selectList("user.getDeptUserList");
	}
	@Override
	public List<Map<String, Object>> getUserInfoByName(String u_name) throws Exception {
		System.out.println("DAO단 파라미터 " + u_name);
		return sqlSession.selectList("user.getUserInfoByName", u_name);
	}
}
