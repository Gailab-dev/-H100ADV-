<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.minwon.dao.LoginMapper">
	<select id="cntUsrByIdAndPwd" resultType="int">
		SELECT COUNT(*) 
		FROM AP_DB_0002
		WHERE 1=1 
			AND u_login_id = #{id}
			AND u_login_pwd = #{pwd}		
	</select>

</mapper>